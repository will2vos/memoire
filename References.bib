	keywords = {biosphere, climate change, ecosystem, potential natural vegetation},
	file = {Alo_Wang_2008_Potential future changes of the terrestrial ecosystem based on climate.pdf:/Users/williamdevos/Documents/Biblio_zotfile/Climate change/Alo_Wang_2008_Potential future changes of the terrestrial ecosystem based on climate.pdf:application/pdf;Full Text PDF:/Users/williamdevos/Zotero/storage/R73Y4726/Alo et Wang - 2008 - Potential future changes of the terrestrial ecosys.pdf:application/pdf;Snapshot:/Users/williamdevos/Zotero/storage/PEBLGM9J/2007JG000528.html:text/html},
