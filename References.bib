@article{Hartshorn2021reviewforest,
	title = {A review of forest management effects on terrestrial leaf litter inhabiting arthropods},
	volume = {12},
	copyright = {http://creativecommons.org/licenses/by/3.0/},
	issn = {1999-4907},
	url = {https://www.mdpi.com/1999-4907/12/1/23},
	doi = {10.3390/f12010023},
	abstract = {Leaf litter arthropods are some of the most abundant and diverse communities in forests and provide myriad ecosystem services from decomposition and mineralization to pollination and predation. They are important to forest health and management and, in turn, are affected by how we manage our forests. Various forest management techniques such as clear cutting, burning, and chemical control of invasive species all have differing effects on ground dwelling arthropods and, despite their importance, a review of the literature on these effects does not currently exist. My objective with this paper is to review the effects of different types of forest management on arthropods in leaf litter systems.},
