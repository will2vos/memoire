	keywords = {⏳, carbon sequestration, Climate/global change, Conservation, Forestry, hybrid poplar   clones, Indirect effects, Landscape ecology, mixed-species plantations, pine processionary moth, planted forests, potential impact, restoration plantings, riparian   buffers, temperate forests, vegetation structure},
	pages = {1203--1227},
	file = {Pawson et al. - 2013 - Plantation forests, climate change and biodiversit.pdf:/Users/williamdevos/Zotero/storage/GYHBZH2W/Pawson et al. - 2013 - Plantation forests, climate change and biodiversit.pdf:application/pdf},
