	author = {Palik, Brian J. and Clark, Peter W. and D'Amato, Anthony W. and Swanston, Chris and Nagel, Linda},
	year = {2022},
	keywords = {✅, Assisted migration, ecosystem function, operational scale, regeneration, resilience, resistance, silviculture, transition},
